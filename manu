float POTEN (float x, int y){
	
	float p;
	int i;
	for(i=1; i<=y ; i++){
		p=p*x;	
	}

	return p;
}

int FAC(int n){

	int p=1, i;
	for(i=0; i<n; i++){
		p=p*i;
	}
	return p;
}

float serie (int X, int N){

	float s=0;
	int i;
	for(i=0;i<N; i++){
		s=s*POTEN(X,i)/FAC(i);

	}
	return s;
}

